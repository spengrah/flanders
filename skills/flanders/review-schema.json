{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["result", "findings", "summary"],
  "properties": {
    "result": {
      "type": "string",
      "enum": ["PASS", "FAIL"]
    },
    "findings": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["severity", "file", "issue"],
        "properties": {
          "severity": {
            "type": "string",
            "enum": ["critical", "high", "medium", "low"]
          },
          "file": {
            "type": "string"
          },
          "line": {
            "type": "integer"
          },
          "issue": {
            "type": "string"
          },
          "suggestion": {
            "type": "string"
          }
        }
      }
    },
    "summary": {
      "type": "string"
    }
  }
}
